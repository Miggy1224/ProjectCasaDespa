@{
    ViewData["Title"] = "Register Page";
}

<!-- Register Section -->
<section id="register">
    <div id="registerform">
        <div id="registertitle">
            <h2 id="registerheading"> REGISTER </h2>
        </div>
        <div id="formcontent">
            <div id="column1formcontent">
                <table>
                    <tr>
                        <td id="regtd"><h4 id="firstname">FIRST NAME:    </h4></td>
                        <td id="regtdinput"><input type="text" id="firstnameinput" placeholder=""></td>
                    </tr>
                    <tr>
                        <td id="regtd"><h4 id="lastname">LAST NAME:    </h4></td>
                        <td id="regtdinput"><input type="text" id="lastnameinput" placeholder=""></td>
                    </tr>
                    <tr>
                        <td id="addresstd"><h4 id="address">ADDRESS:    </h4></td>
                        <td id="addresstddinput"><input type="text" id="addressinput" placeholder=""></td>
                    </tr>
                    <tr>
                        <td id="regtd"><h4 id="gender">GENDER:</h4></td>
                        <td id="regtdinput">
                            <input type="radio" id="male" name="" value="">
                            <label for=""><h6>MALE</h6></label>
                            <input type="radio" id="female" name="" value="">
                            <label for=""><h6>FEMALE</h6></label>
                        </td>
                    </tr>
                </table>
            </div>
            <div id="column2formcontent">
                <div id="securityquestionsdiv">
                    <h4 id="securityquestion">SECURITY QUESTION: </h4>
                    <input type="text" id="securityquestioninput" placeholder="Provide Security Question">
                    <input type="text" id="securityanswerinput" placeholder="Provide Answer">
                </div>

                <table id="tabledivemailpass">
                    <tr>
                        <td id="emailtd"><h4 id="email">EMAIL:    </h4></td>
                        <td id="emailregtdinput"> <input type="text" id="emailinput" placeholder=""><br></br></td>
                    </tr>
                    <tr>
                        <td id="passwordtd"><h4 id="registerpassword">PASSWORD:    </h4></td>
                        <td id="passregtdinput"><input type="password" id="registerpasswordinput" placeholder=""></td>
                    </tr>
                </table>
            </div>
        </div>
        <div id="registerbuttonscontainer">
            <button id="cancelbutton"> CANCEL </button>
            <button id="registerbutton"> REGISTER </button>
        </div>
    </div>
</section>